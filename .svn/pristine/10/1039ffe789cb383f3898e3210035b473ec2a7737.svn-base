<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    tools:context="com.htmitech.proxy.activity.SchedulePoiSearchActivity">
    <include
        android:id="@+id/system_title"
        layout="@layout/system_title" />
    <com.amap.api.maps2d.MapView
        android:id="@+id/mapView"
        android:layout_width="1px"
        android:layout_height="1px"
        />
    <FrameLayout
        android:id="@+id/fl_poi_root"
        android:layout_width="match_parent"
        android:layout_below="@+id/system_title"
        android:layout_height="45dp">
        <LinearLayout
            android:id="@+id/ll_search_root"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="#ffffff"
            >

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="6"
                android:background="#17030303"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:hint="请输入关键字"
                android:paddingLeft="30dp"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="#7A797B"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_search"
            android:layout_marginLeft="8dp"
            />
    </FrameLayout>

    <View
        android:id="@+id/split"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/fl_poi_root"
        android:background="#17030303"
        />
      <TextView
          android:id="@+id/tv_current_key"
          android:layout_below="@+id/split"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:background="#17030303"
          android:text="当前地址"
          android:gravity="center_vertical"
          android:paddingLeft="12dp"
          android:textSize="14sp"
          />
    <LinearLayout
        android:id="@+id/ll_current_root"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:layout_below="@+id/tv_current_key"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_current_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="北京"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="14sp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_date_location"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="重新定位"
            android:gravity="center_vertical"
            android:textColor="#FF297BFB"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_often_location"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="常用地址"
        android:layout_below="@+id/ll_current_root"
        android:background="#17030303"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:textSize="14sp"
        />
    <com.htmitech.commonx.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_schedule_list"
        android:layout_below="@+id/tv_often_location"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/color_daiban_yiban_back"
        android:listSelector="@null"
        android:scrollbars="none"
        ptr:mx_ptrAnimationStyle="rotate"
        ptr:mx_ptrHeaderSubTextColor="@color/black"
        ptr:mx_ptrHeaderTextColor="@color/black"
        ptr:mx_ptrMode="both"
        />
</RelativeLayout>
