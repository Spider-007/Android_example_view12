<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
     <include
        android:id="@+id/layout_circle_titlebar"
        layout="@layout/layout_titlebar2" />
     
     <EditText 
         android:id="@+id/et_Options"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:minLines="4"
         android:hint="请输入常用意见"
         android:gravity="top"
         android:layout_margin="10dp"
         android:background="@drawable/option_input_shape"
         />
     <TextView 
         android:layout_width="match_parent"
         android:layout_height="20dp"
         android:background="#FFF5F5F5"/>
     <TextView 
         android:id="@+id/btn_option_save"
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:text="保存"
         android:textSize="18sp"
         android:gravity="center"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:textColor="@android:color/white"
         android:background="@drawable/option_save_shape"/>
    

</LinearLayout>
