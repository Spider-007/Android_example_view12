<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.htmitech.proxy.activity.ClearCacheActivity">

    <include
        android:id="@+id/system_title"
        layout="@layout/system_title" />

    <com.htmitech.app.widget.UserMessageScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/system_title"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:focusable="false"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/feed_back_llbg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:text="常用问题类型"/>

                <LinearLayout
                    android:id="@+id/layout_feed_back_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/feed_back_llbg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingLeft="15dp"
                    android:textSize="16sp"
                    android:text="描述您的意见"/>

                <EditText
                    android:id="@+id/et_feed_back"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/option_input_shape"
                    android:gravity="top"
                    android:hint="请输入您的宝贵意见"
                    android:layout_margin="10dp"
                    android:textColor="@color/color_ff999999"
                    android:textSize="15sp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/feed_back_llbg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingLeft="15dp"
                    android:textSize="16sp"
                    android:text="上传照片（不超过3张）"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/ll_feed_back_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" />

                        <ImageView
                            android:id="@+id/iv_feed_back_add"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="13dp"
                            android:src="@drawable/btn_add_pic" />

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

    </com.htmitech.app.widget.UserMessageScrollView>





</RelativeLayout>
