<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="right" >
    <ImageView
        android:id="@+id/line_create_task"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/view_divider_height"
        android:layout_marginLeft="@dimen/pop_menu_margin"
        android:layout_marginRight="@dimen/pop_menu_margin"
        android:background="@color/color_ff5d5d5d" />
    <LinearLayout
        android:id="@+id/popbtn_create_task"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:background="@drawable/popup_menu_item_selector"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/menu_pop_item"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/iv_app_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:maxHeight="20dp"
                android:src="@drawable/message_type_task" />

            <TextView
                android:id="@+id/tv_app_center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="@string/circle_menu_create_task"
                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_heading18"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>