<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:id="@+id/fl_upload_finish_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/upload_finish_rv_serach"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/search_back"
            android:gravity="center">

            <ImageView
                android:id="@+id/upload_finish_iv_serach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/mx_search_bar_icon_normal" />

            <TextView
                android:id="@+id/upload_finish_tv_serach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/upload_finish_iv_serach"
                android:text="请输入标题关键字搜索"
                android:textColor="#FFBEBEBE"
                android:textSize="14dp" />

        </RelativeLayout>


        <SearchView
            android:id="@+id/upload_finish_sv_search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:iconifiedByDefault="false"
            android:imeOptions="actionSearch"
            android:inputType="textCapWords"
            android:queryHint="请输入要搜索的提标"
            android:searchMode="queryRewriteFromText"
            android:showAsAction="collapseActionView"
            android:visibility="gone"></SearchView>
    </FrameLayout>

    <ListView
        android:id="@+id/lv_upload_file_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_upload_finish_search"
        android:padding="0dp"
        android:scrollbars="none"></ListView>

</RelativeLayout>