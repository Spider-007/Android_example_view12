<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_clear_back"
    tools:context="com.htmitech.proxy.activity.ClearCacheActivity">

    <ListView
        android:id="@+id/lv_clear_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/huise"
        android:animation="@anim/pophidden_anim"
        android:layout_marginBottom="60dp"></ListView>
    <RelativeLayout
        android:id="@+id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        skin:enable="true"
        android:background="@color/ht_hred_title" >

        <ImageView
            android:id="@+id/btn_daiban_person"
            style="@style/title_button"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            skin:enable="true"
            android:background="@drawable/mx_btn_back"
            android:scaleType="center" />

        <TextView
            android:id="@+id/daibantopTabIndicator_bbslist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/ht_title_text_color"
            skin:enable="true"
            android:textSize="20dp"
            android:text="清除缓存"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/activity_back_ht_color"
        android:gravity="center"
        android:paddingBottom="@dimen/view_vertical_margin"
        android:paddingTop="@dimen/view_vertical_margin"
        android:layout_margin="10dp"
        android:maxLength="13"
        android:text="一键清理已选（）"
        android:textColor="@color/white"
        android:textSize="18.0dip" />

    <TextView
        android:id="@+id/tv_no_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/img_diamond_none"
        android:text="当前无缓存"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:gravity="center"/>
</RelativeLayout>
