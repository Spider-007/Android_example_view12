<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.htmitech.emportal.ui.announcement.AnnouncementListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/from_hight"
        skin:enable="true"
        android:background="@color/ht_hred_title"
        android:minHeight="50dp">

        <TextView
            android:id="@+id/tv_announcement_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:textColor="@color/ht_title_text_color"
            skin:enable="true"
            android:textSize="17sp" />


        <ImageView
            android:id="@+id/iv_announcement_back"
            style="@style/title_button"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            skin:enable="true"
            android:scaleType="center"
            android:background="@drawable/mx_btn_back"
            />
        <ImageView
            android:id="@+id/iv_announcement_back_home"
            style="@style/title_button"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            skin:enable="true"
            android:scaleType="center"
            android:visibility="gone"
            android:background="@drawable/mx_btn_community_list_phone"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/daiban_rv_serach"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/search_back"
        android:visibility="gone"
        android:gravity="center" >

        <ImageView
            android:id="@+id/daiban_iv_serach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/mx_search_bar_icon_normal" />

        <TextView
            android:id="@+id/daiban_tv_serach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/daiban_iv_serach"
            android:text="请输入标题关键字搜索"
            android:layout_centerVertical="true"
            android:textColor="#FFBEBEBE"
            android:textSize="14dp" />

    </RelativeLayout>

    <SearchView
        android:id="@+id/daiban_sv_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:iconifiedByDefault="false"
        android:imeOptions="actionSearch"
        android:inputType="textCapWords"
        android:queryHint="请输入要搜索的提标"
        android:searchMode="queryRewriteFromText"
        android:showAsAction="collapseActionView"
        android:visibility="gone" >
    </SearchView>
    <com.htmitech.MyView.EmptyLayout
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_daiban_yiban_back" >
        <com.htmitech.commonx.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/announcement_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            ptr:mx_ptrAnimationStyle="rotate"
            ptr:mx_ptrHeaderSubTextColor="@color/black"
            ptr:mx_ptrHeaderTextColor="@color/black"
            ptr:mx_ptrMode="both"
            >

        </com.htmitech.commonx.pulltorefresh.library.PullToRefreshListView>
    </com.htmitech.MyView.EmptyLayout>
</LinearLayout>
