<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:id="@+id/view_header"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/mx_title_bar_height"
    skin:enable="true"
    android:background="@color/ht_hred_title" >

    <ImageButton
        android:id="@+id/title_left_button"
        style="@style/mx_title_button"
        skin:enable="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/mx_btn_back" />

    <ImageButton
        android:id="@+id/title_to_root"
        style="@style/mx_title_button"
        android:layout_toRightOf="@id/title_left_button"
        android:visibility="gone"
        skin:enable="true"
        android:background="@drawable/mx_btn_close" />

    <com.minxing.kit.ui.widget.MXVariableTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        skin:enable="true"
        android:singleLine="true"
        android:text="@string/mx_contact"
        android:textColor="@color/ht_title_text_color"
        android:textSize="@dimen/mx_max_textsize" />
    
    <com.minxing.kit.ui.widget.MXButton
        android:id="@+id/select_all_btn"
        style="@style/mx_mm_title_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/mx_contact_header_select_all"
        skin:enable="true"
        android:layout_marginRight="10dp"
        android:textColor="@color/ht_title_text_color"
        android:textSize="14sp"
        android:visibility="gone"/>

</RelativeLayout>