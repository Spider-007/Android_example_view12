<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!-- 中铁 -->
    <!--<LinearLayout-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="0.7"-->
    <!--android:orientation="vertical"-->
    <!-->-->

    <!--</LinearLayout>-->
    <!--<include-->
        <!--android:id="@+id/system_title"-->
        <!--layout="@layout/system_title" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/login_dl"
        android:gravity="center"
        android:textSize="@dimen/max_textsize"
        android:background="@drawable/img_login_top_bg"/>

    <LinearLayout
        android:id="@+id/layoutfirst"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical">

        <!-- <ImageView /> -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <com.htmitech.MyView.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_input_left"
                android:layout_marginRight="@dimen/login_input_right">

                <com.htmitech.app.widget.CustomEditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:drawableRight="@drawable/ic_edit_text_delbtn"
                    android:background="@color/transparent"
                    android:drawablePadding="5dp"
                    android:hint="@string/plx_input_email"
                    android:singleLine="true"
                    android:textColor="@color/half_alpha_black"
                    android:textColorHint="@color/half_alpha_black"
                    android:textSize="16sp" />
            </com.htmitech.MyView.FloatLabeledEditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ht_ccc" />

            <com.htmitech.MyView.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_input_left"
                android:layout_marginRight="@dimen/login_input_right">

                <com.htmitech.app.widget.CustomEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/transparent"
                    android:drawablePadding="5dip"
                    android:drawableRight="@drawable/ic_edit_text_delbtn"
                    android:hint="@string/plx_input_password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/half_alpha_black"
                    android:textColorHint="@color/half_alpha_black"
                    android:textSize="16sp" />
            </com.htmitech.MyView.FloatLabeledEditText>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ht_ccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/ll_verification_code"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <com.htmitech.MyView.FloatLabeledEditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/login_input_left"
                    android:layout_marginRight="@dimen/login_input_right">

                    <com.htmitech.app.widget.CustomEditText
                        android:id="@+id/verification_code"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/transparent"
                        android:drawablePadding="5dip"
                        android:drawableRight="@drawable/ic_edit_text_delbtn"
                        android:hint="@string/plx_input_verification_code"
                        android:singleLine="true"
                        android:textColor="@color/half_alpha_black"
                        android:textColorHint="@color/half_alpha_black"
                        android:textSize="16sp" />
                </com.htmitech.MyView.FloatLabeledEditText>
                <com.htmitech.MyView.VerifyCode
                    android:id="@+id/vc_pictrue"
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    app:codeBackground="#FCF8E2"
                    app:codeLength="4"
                    app:codeTextSize="22sp"
                    app:isContainChar="true"
                    app:linNum="5"
                    app:pointNum="40" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ht_ccc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="@dimen/login_input_left"
            android:layout_marginRight="@dimen/login_input_right">

            <CheckBox
                android:id="@+id/checkSavePass"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/checkbox_autologin"
                android:button="@null"
                android:checked="true"
                android:text=""
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtSavePass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/autologinnext"
                android:textColor="@color/white"
                android:textSize="@dimen/max_textsize"
                android:visibility="invisible" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="150dp"
            android:layout_marginLeft="@dimen/login_input_left"
            android:layout_marginRight="@dimen/login_input_right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/login_button_red"
                android:enabled="false"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_vertical_margin" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.55">

        <Button
            android:id="@+id/login_settingBtn"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/trans"
            android:text="@string/login_setting"
            android:textColor="@color/buttom_color"
            android:textSize="@dimen/max_textsize" />
    </LinearLayout>

</LinearLayout>