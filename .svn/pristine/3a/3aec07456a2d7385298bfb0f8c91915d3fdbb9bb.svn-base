<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/allbackground"
    tools:context="com.htmitech.ztcustom.zt.chinarailway.PlannedCashRateActivity">


    <RelativeLayout
        android:id="@+id/ll_planned_rate_title_theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentTop="true"
        android:background="@color/title_color"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/ib_planned_rate_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:background="#00000000"
            android:clickable="true"
            android:gravity="center"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/tv_planned_rate_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="计划兑现"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_textsize" />

        <ImageView
            android:id="@+id/bt_planned_rate_right_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/btn_search"
            android:visibility="gone" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_planned_rate_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/date_height"
        android:layout_below="@id/ll_planned_rate_title_theme"
        android:background="#EAF4FE"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/iv_planned_rate_cut"
            android:layout_width="@dimen/datesize"
            android:layout_height="@dimen/datesize"
            android:src="@drawable/date_left" />

        <TextView
            android:id="@+id/tv_planned_rate_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2012年5月"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_planned_rate_add"
            android:layout_width="@dimen/datesize"
            android:layout_height="@dimen/datesize"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/date_right" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_planned_rate_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="#EAF4FE"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_planned_rate_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="4"
                android:background="#FFFFFF"
                android:padding="5dp"
                android:text="请输入项目名称"
                android:textColor="#D3D3D3"
                android:textSize="@dimen/kaipian_top_textsize" />

            <Button
                android:id="@+id/bt_planned_rate_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:padding="5dp"
                android:text="清除"
                android:textColor="@color/black"
                android:textSize="@dimen/kaipian_top_textsize" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_planned_rate_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:orientation="vertical">

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
