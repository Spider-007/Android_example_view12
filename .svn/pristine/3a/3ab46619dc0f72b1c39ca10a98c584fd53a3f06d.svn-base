<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:id="@+id/view_header"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_bar_height"
    skin:enable="true"
    android:background="@color/ht_hred_title" >

    <LinearLayout
        android:id="@+id/title_handle_layout"
        android:layout_width="115.0dip"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/title_left_back_button"
            style="@style/title_button"
            android:layout_alignParentLeft="true"
            skin:enable="true"
            android:background="@drawable/mx_btn_back"
            android:visibility="gone" />

        <include
            android:id="@+id/system_handle"
            layout="@layout/header_handle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_btn_layout"
        android:layout_width="95.0dip"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/title_right_new_function"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|center_vertical"
            android:focusable="true"
            skin:enable="true"
            android:background="@drawable/mx_btn_sns_new" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/title_btn_layout"
        android:layout_toRightOf="@id/title_handle_layout"
        android:layout_weight="1.0"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/title_arrow_space"

            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="所有"
            skin:enable="true"
            android:textColor="@color/ht_title_text_color"
            android:textSize="@dimen/max_textsize" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_arrow_down"
            skin:enable="true"
            android:layout_marginLeft="8dp"
            />
    </LinearLayout>

</RelativeLayout>