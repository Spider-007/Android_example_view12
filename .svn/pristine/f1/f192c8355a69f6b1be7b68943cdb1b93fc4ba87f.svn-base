<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_attachment_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/layout_tablecell_bg"
    android:orientation="horizontal"
     >
    

    <ImageView
        android:id="@+id/imageview_attachment"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/color_ffc8c8c8" />

    <ImageView
        android:id="@+id/btn_attachment"
        style="@style/title_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/btn_accessory_download"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/btn_attachment"
        android:layout_toRightOf="@id/imageview_attachment"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_attachment_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="文档标题"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_attachment_size"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="文档大小:0k"
            android:textColor="@color/color_ff666666"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/progressbar_attachment_download"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="分享"
            android:visibility="gone"
            android:textColor="@color/color_ff555555"
            android:textSize="15sp"/>
    </LinearLayout>
    <com.htmitech.MyView.RectProgressView
        android:id="@+id/circleProgressbar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_centerInParent="true" />
</RelativeLayout>