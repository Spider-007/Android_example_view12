<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="50dp"
    android:background="@color/color_fffafafa"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/empty_view_image_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="29dp"
        android:drawablePadding="15dp"
        android:includeFontPadding="false"
        android:src="@drawable/net_error"
        android:textColor="@color/color_ff222222"
        android:textSize="@dimen/fontsize_heading18" />

    <TextView
        android:id="@+id/empty_view_divider_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/empty_view_image_id"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:text="网络出问题啦"
        android:textColor="@color/color_ff333333"
        android:textSize="@dimen/fontsize_heading21" />

    <TextView
        android:id="@+id/empty_view_reason_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/empty_view_divider_id"
        android:layout_below="@id/empty_view_divider_id"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:includeFontPadding="false"
        android:text="@string/empty_view_reason"
        android:textColor="@color/color_ff606060"
        android:textSize="@dimen/fontsize_heading16"
        android:visibility="gone" />

    <TextView
        android:id="@+id/empty_view_reason_network_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/empty_view_reason_id"
        android:layout_below="@id/empty_view_reason_id"
        android:drawableLeft="@drawable/sign_oa_flow_line_previous"
        android:drawablePadding="5dp"
        android:includeFontPadding="false"
        android:text="@string/empty_view_reason_network"
        android:textColor="@color/color_ff606060"
        android:textSize="@dimen/fontsize_heading16"
        android:visibility="gone" />

    <TextView
        android:id="@+id/empty_view_setting_network_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/empty_view_reason_id"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/empty_view_reason_network_id"
        android:includeFontPadding="false"
        android:text="@string/empty_view_setting_network"
        android:textColor="@color/color_ff09479b"
        android:textSize="@dimen/fontsize_heading16"
        android:visibility="gone" />

    <Button
        android:id="@+id/empty_view_refresh_id"
        android:layout_width="110dp"
        android:layout_height="31dp"
        android:layout_below="@id/empty_view_setting_network_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_green"
        android:includeFontPadding="false"
        android:text="刷新试试"
        android:textColor="@color/color_ffffffff"
        android:textSize="@dimen/fontsize_heading17" />

</RelativeLayout>