<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_from_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <include
        android:id="@+id/head"
        layout="@layout/ht_from_detail_data_item" />

    <TextView
        android:id="@+id/tv_border_lines"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/railway_back"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_frozen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/ll_not_frozen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </LinearLayout>

        <ListView
            android:id="@+id/tv_detail_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:focusable="false" />
    </RelativeLayout>
</LinearLayout>