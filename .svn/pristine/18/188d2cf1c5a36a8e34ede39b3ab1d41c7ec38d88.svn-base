<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <TextView
        android:id="@+id/write_mode_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#027cb6"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"	
        android:drawablePadding="2dp"
        android:drawableTop="@drawable/icon_pen"
        android:gravity="center"
        android:text="手写笔"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/write_mode_btn"
        android:gravity="right|bottom"
        android:layout_alignParentRight="true" >

        <TextView
            android:id="@+id/pen_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/icon_config"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/earse_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/icon_config"
            android:gravity="center"
            android:text="擦除"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/undo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/icon_undo"
            android:gravity="center"
            android:text="撤销"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/redo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/icon_redo"
            android:gravity="center"
            android:text="回退"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/icon_clear"
            android:gravity="center"
            android:text="清屏"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/icon_save"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/icon_close"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </TableRow>

</RelativeLayout>