<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corners_bg_white_press_stroke"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/form_fielditem_text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/text_back"
        android:textColor="@color/color_55555555"
        android:textSize="16sp">
    </TextView>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="2.1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/form_fielditem_editvalue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/text_back"
            android:textColor="@color/color_55555555"
            android:textSize="19sp"
            android:visibility="invisible"></TextView>

        <ImageView
            android:id="@+id/form_fielditem_editimage"
            android:layout_alignRight="@+id/form_fielditem_editvalue"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_editflag"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>