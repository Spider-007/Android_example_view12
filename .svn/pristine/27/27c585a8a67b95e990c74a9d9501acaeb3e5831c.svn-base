<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/upload_big_file_all"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_updownload_sclb_top_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_updownload_sclb_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_hint_pause" />

        <TextView
            android:id="@+id/tv_updownload_sclb_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="网络连接中断文件上传暂停，请检查您的网络设置" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_upload_sclb_all_resume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="全部恢复"
            android:textColor="#555555"
            android:textSize="17sp"
            android:visibility="gone" />

        <ListView
            android:id="@+id/lv_updownload_sclb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bt_upload_sclb_all_resume"
            android:padding="0dp"
            android:scrollbars="none">

        </ListView>

    </RelativeLayout>

</LinearLayout>