<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/view_divider_height"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="4dp"
        android:background="#cecece" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/linearlayout_tab_daiban"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tab_daiban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/ic_home_p"
                android:gravity="center"
                android:text="待办"
                skin:enable="true"
                android:textColor="@color/ht_hred_title"
                android:textSize="@dimen/fontsize_heading12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearlayout_tab_daiyue"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tab_daiyue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/ic_msg_n"
                android:gravity="center"
                android:text="代阅"
                android:textColor="@color/color_main_tab_text_n"
                android:textSize="@dimen/fontsize_heading12" />

            <TextView
                android:id="@+id/textview_daiyue"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignLeft="@id/tab_daiyue"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/round_red_bg"
                android:gravity="center"
                android:text="20"
                android:textColor="@color/color_ffffffff"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearlayout_tab_communication"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/tab_communication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/ic_user_n"
                android:gravity="center"
                android:text="消息"
                android:textColor="@color/color_main_tab_text_n"
                android:textSize="@dimen/fontsize_heading12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearlayout_tab_cicle"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tab_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/ic_msg_n"
                android:gravity="center"
                android:text="圈子"
                android:textColor="@color/color_main_tab_text_n"
                android:textSize="@dimen/fontsize_heading12" />

            <TextView
                android:id="@+id/textview_circle_num"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignLeft="@id/tab_circle"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/round_red_bg"
                android:gravity="center"
                android:text="20"
                android:textColor="@color/color_ffffffff"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>