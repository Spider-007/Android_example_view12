<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/allbackground"
    tools:context="com.htmitech.ztcustom.zt.chinarailway.QualityBookActivity">

    <RelativeLayout
        android:id="@+id/ll_quality_book_title_theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentTop="true"
        android:background="@color/title_color"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/ib_quality_book_back"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/tv_quality_book_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="质保书"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_textsize" />

        <ImageView
            android:id="@+id/bt_quality_book_right_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/btn_search" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_qualitybook_searchnews"
        android:layout_below="@+id/ll_quality_book_title_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0EFF7"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全路质保书情况"
            android:textSize="12sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_qualitybook_situation"
        android:layout_below="@+id/ll_qualitybook_searchnews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:scrollbars="none">
    </ListView>

</RelativeLayout>
