<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants">


    <LinearLayout
        android:id="@+id/edit_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/application_center"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerHorizontal="true">

                <com.htmitech.MyView.ClassifyView
                    android:id="@+id/classify_view"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/classify_drawable"
                    android:orientation="vertical"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/class_angle_nulber"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/textview_style_number"
                    android:gravity="center"
                    android:text="13"
                    android:textColor="@color/white"
                    android:textSize="@dimen/check_item_buttom"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/iv_image_layout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/icon_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/hello_world"
                    android:scaleType="fitCenter" />


                <TextView
                    android:id="@+id/angle_nulber"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/textview_style_number"
                    android:gravity="center"
                    android:text="13"
                    android:textColor="@color/white"
                    android:textSize="@dimen/check_item_buttom"
                    android:visibility="gone" />
            </RelativeLayout>


            <com.htmitech.emportal.ui.applicationcenter.CircleProgressView
                android:id="@+id/circleProgressbar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:id="@+id/name_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:text="@string/hello_world"
            android:textColor="@color/buttom_color"
            android:textSize="@dimen/check_item_buttom13" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_no_installed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/img_no_installed"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/delet_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/edit_ll"
        android:layout_alignTop="@id/edit_ll"
        android:focusable="true"
        android:clickable="true"
        android:contentDescription="@string/hello_world"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/edit_flag"
        android:visibility="gone" />

</RelativeLayout>