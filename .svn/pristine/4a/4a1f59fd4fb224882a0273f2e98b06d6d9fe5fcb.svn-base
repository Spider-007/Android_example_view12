<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fan="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context="zhp.plugin.first.MainActivity">
    <mobilereport.com.chatkit.myView.PicChartView
        android:id="@+id/fanChartView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        fan:legend_align="left"
        android:layout_alignParentRight="true"
        android:background="@color/railway_back"
        fan:circle_center_scale_size="5"
        fan:circle_center_color="@color/trans"
        fan:circle_center_text_size="20sp"
        fan:circle_center_text_color="@color/white"
        />

    <!--宽度和高度支持wrap_content 系统自动识别屏幕宽高进行自定适配 也支持具体定义-->
    <!--Title_Local  支持三种 left right gone -->
    <!--circle_center_scale_size  表示小圆和大圆之间的比例 支持float类型 -->
    <!--circle_size  表示圆心和大圆之间的比例， -->
</RelativeLayout>
