<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_state_root"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#F0F0F0"
    android:visibility="gone"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_no_bind"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="未绑定"
        android:textColor="#297BFB"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_bind"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="绑定"
        android:textColor="#297BFB"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_audit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="审核中"
        android:textColor="#297BFB"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="加入黑名单"
        android:textColor="#297BFB"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_loss"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="挂失"
        android:textColor="#297BFB"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_unbind"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="解除绑定"
        android:textColor="#297BFB"
        android:textSize="14sp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/tv_unblack"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="解除黑名单"
        android:textColor="#297BFB"
        android:textSize="14sp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/tv_unloss"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="解除挂失"
        android:textColor="#297BFB"
        android:textSize="14sp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/tv_look"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="查看"
        android:textColor="#297BFB"
        android:textSize="14sp"
        android:visibility="gone" />
</LinearLayout>