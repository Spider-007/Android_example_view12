.select_box { width:100%; height:24px; }
.tag_select { display:block; color:#000; width:100%; height:24px; background:white; padding:0 10px; line-height:24px; }
.tag_select_hover { display:block; color:#000; width:100%; height:24px; background:red; padding:0 10px; line-height:24px; }
.tag_select_open { display:block; color:#000; width:100%; height:24px; background:orange; padding:0 10px; line-height:24px; }

.tag_options { position:absolute;  list-style:none; background:yellowgreen; margin:0; width: 100% ;border: solid 2px red; }

.tag_options li { background:floralwhite; display:block; width:100%; padding:0 0 0 0px; height:24px; text-decoration:none; line-height:24px; color:#000; }
.tag_options li.open_hover { background:grey; color:#000 }
.tag_options li.open_selected { background:#00b6ad; color:#fff }