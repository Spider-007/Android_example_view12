<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <RelativeLayout
        android:id="@+id/layout_daiban_titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        skin:enable="true"
        android:background="@color/ht_hred_title" >

        <ImageView
            android:id="@+id/btn_daiban_person"
            style="@style/title_button"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            skin:enable="true"
            android:background="@drawable/mx_btn_back"
            android:scaleType="center" />

        <TextView
            android:id="@+id/daibantopTabIndicator_bbslist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/ht_title_text_color"
            skin:enable="true"
            android:textSize="20dp"
            android:text="字体大小设置"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_weight="1">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.htmitech.app.widget.RoundImageView
            android:id="@+id/iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/img_toux_normal" />
        <TextView
            android:id="@+id/tv_one"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="left|center_vertical"
            android:textSize="14sp"
            android:text="拖动下方的滑块，可以设置界面中字体的大小"
            android:layout_marginLeft="70dp"
            android:background="@drawable/img_bg_other_chat"/>

    </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:layout_below="@+id/rl_top">

            <TextView
                android:id="@+id/tv_two"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:minHeight="40dp"
                android:gravity="center"
                android:text="设置字体"
                android:textCursorDrawable="@null"
                android:textIsSelectable="true"
                android:textSize="14sp"
                android:layout_marginRight="10dp"
                android:background="@drawable/img_bg_my_chat"/>

            <com.htmitech.app.widget.RoundImageView
                android:id="@+id/iv_and_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/img_toux_normal" />

            <TextView
                android:id="@+id/default_tv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dip"
                android:visibility="gone"
                android:background="@drawable/textview_style"

                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_buttom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_center">

            <com.htmitech.app.widget.RoundImageView
                android:id="@+id/iv_buttom_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/img_toux_normal" />
            <TextView
                android:id="@+id/tv_three"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:layout_alignParentLeft="true"
                android:textSize="14sp"
                android:gravity="left|center_vertical"
                android:layout_centerVertical="true"
                android:text="设置后会改联系人和表单详情等中的字体大小"
                android:layout_marginLeft="70dp"
                android:background="@drawable/img_bg_other_chat"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginLeft="14.33dp"
        android:layout_marginRight="5.33dp"
        android:layout_height="130dp">
    <com.htmitech.app.widget.FontSliderBar
        android:id="@+id/fdb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        />
    </RelativeLayout>
</LinearLayout>