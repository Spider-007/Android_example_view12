<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    skin:enable="true"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/ht_hred_title" >

    <ImageView
        android:id="@+id/imgview_titlebar_back"
        style="@style/title_button"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        skin:enable="true"
        android:background="@drawable/mx_btn_back"
        android:scaleType="center" />


    <ImageView
        android:id="@+id/imgview_titlebar_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/textview_titlebar_more"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:src="@drawable/btn_selector_more"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textview_titlebar_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="25dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/ht_title_text_color"
        skin:enable="true"
        android:textSize="@dimen/fontsize_heading19" />

</RelativeLayout>