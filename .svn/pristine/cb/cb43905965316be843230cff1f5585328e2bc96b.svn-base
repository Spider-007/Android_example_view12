<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_grey_dark">

    <include
        android:id="@+id/system_title"
        layout="@layout/system_title" />

    <LinearLayout
        android:id="@+id/ll_device_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/system_title"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:drawableRight="@drawable/ic_arrow_right_normal"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:text="修改密码"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_device_change_password">

        <LinearLayout
            android:id="@+id/gesture_password_setting_off"
            style="@style/bg_setting_item_narrow_checkbox"
            android:layout_width="fill_parent"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/gesture_password_off"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:drawableRight="@drawable/icon_checkbox_normal"
                android:gravity="center_vertical"
                android:text="@string/gesture_password_on"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/gesture_password_setting_on"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/gesture_password"
                style="@style/bg_setting_item_narrow_checkbox"
                android:layout_marginTop="0dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gesture_password_on"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:drawableRight="@drawable/icon_checkbox_selected"
                    android:gravity="center_vertical"
                    android:text="@string/gesture_password_on"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/change_gesture_password"
                style="@style/bg_setting_item_narrow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_below="@id/gesture_password"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:drawableRight="@drawable/submenu"
                    android:gravity="center_vertical"
                    android:text="@string/gesture_password_change"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/gesture_password_zw"
        style="@style/bg_setting_item_narrow_checkbox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_root"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gesture_password_on_zw"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="开启指纹验证"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_zw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_checkbox_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_device_safe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gesture_password_zw"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:drawableRight="@drawable/ic_arrow_right_normal"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:text="设备安全"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>