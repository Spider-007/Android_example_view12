<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffffff"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="10dp" >

        <ImageView
            android:id="@+id/line_up"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:src="@color/color_ffd4d4d4" />

        <ImageView
            android:id="@+id/imageview_flowlist_content_tip"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sign_oa_flow_line_previous" />

        <ImageView
            android:id="@+id/imageview_flowlist_content_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/sign_oa_flow_line_previous" />
        <ImageView
            android:id="@+id/line_buttom"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:src="@color/color_ffd4d4d4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/textview_flowlist_content_stepname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="步骤名称"
                android:textSize="16sp"
                android:textColor="@color/color_333333"
                />
            <TextView
                android:id="@+id/textview_flowlist_content_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text=""
                android:layout_marginTop="12dp"
                android:textColor="@color/color_333333"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textview_flowlist_content_actionname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="提交："
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textview_flowlist_content_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

            </LinearLayout>
            <TextView
                android:id="@+id/textview_flowlist_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="2015.05.30 13:22:21"
                android:textColor="@color/color_ff555555"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/iv_buttom_line"
            android:src="@color/color_ffd4d4d4" />
    </LinearLayout>
</LinearLayout>