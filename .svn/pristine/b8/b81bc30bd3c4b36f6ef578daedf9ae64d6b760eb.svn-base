<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/allbackground">


    <RelativeLayout
        android:id="@+id/ll_quality_book_title_theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentTop="true"
        android:background="@color/title_color"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/ib_quality_book_back"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/tv_quality_book_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="质保书"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_textsize" />
        <Button
            android:id="@+id/bt_quality_book_right_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@color/transparent"
            android:text="确定"
            android:textColor="#F8F8F8"
            android:textSize="@dimen/quality_objection_top_textsize" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_upload_finish_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_quality_book_title_theme"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/upload_finish_rv_serach"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/car_search"
            android:gravity="center">

            <ImageView
                android:id="@+id/upload_finish_iv_serach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/mx_search_bar_icon_normal" />

            <TextView
                android:id="@+id/upload_finish_tv_serach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/upload_finish_iv_serach"
                android:text="请输入标题关键字搜索"
                android:textColor="#FFBEBEBE"
                android:textSize="14dp" />

        </RelativeLayout>


        <SearchView
            android:id="@+id/upload_finish_sv_search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:iconifiedByDefault="false"
            android:imeOptions="actionSearch"
            android:inputType="textCapWords"
            android:queryHint="请输入要搜索的提标"
            android:searchMode="queryRewriteFromText"
            android:showAsAction="collapseActionView"
            android:visibility="gone"></SearchView>
    </FrameLayout>

    <com.htmitech.ztcustom.zt.view.zgtw.Sidebar
        android:id="@+id/sidebar"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:layout_below="@+id/fl_upload_finish_search"
        android:clickable="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_upload_finish_search"
        android:layout_toLeftOf="@id/sidebar"
        android:scrollbars="none"
        android:layout_marginTop="7dp">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/floating_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/show_head_toast_bg"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:visibility="invisible" />



</RelativeLayout>