<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:background="@color/transparent"
    >
    <LinearLayout
        android:id="@+id/ll_up_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="50dp"
        android:orientation="vertical" >
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            skin:enable="true"
            android:layout_gravity="center_vertical"
            android:background="@color/ht_hred_title" >

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/check_title"
                android:textColor="@color/ht_title_text_color"
                skin:enable="true"
                android:gravity="center"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/back"
                style="@style/title_button"
                android:scaleType="center"
                skin:enable="true"
                android:background="@drawable/mx_btn_back" />


            <ImageButton
                android:id="@+id/title_right_new_function"
                style="@style/title_button"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_vertical"
                android:focusable="true"
                skin:enable="true"
                android:visibility="gone"
                android:background="@drawable/btn_quick_return"
                />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_view_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#EBEBEB"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_system_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/check_view_pager_system_title"
                android:textColor="@color/black"
                android:visibility="gone"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/check_view_pager_zuzhi_title"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_people_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/check_view_pager_changyong_title"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <!--android:layout_width="200dp"-->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:visibility="gone"
            android:background="@color/huise" />
        <ImageView
            android:id="@+id/cursor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_selected_pressed_holo"
            android:contentDescription="tab" >
        </ImageView>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:flipInterval="30"
            android:layout_weight="1"
            android:persistentDrawingCache="animation" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_popupLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:clickable="true"
        android:layout_marginBottom="50dp"
        android:visibility="gone"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_pop_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bantouming"
            />
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_buttom"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/trans_bg"
        android:layout_height="60dp">
        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:background="@drawable/check_layout"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tv_choose_people_queding"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:text="未选择"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"
                android:textSize="@dimen/check_queding"
                android:background="@color/huise"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_yixuanze_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_personnel_normal"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="已选择0人"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/iv_yixuanze_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:id="@+id/tv_choose_people_message"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@anim/imofan_round_progress_bar_1" />
</RelativeLayout>