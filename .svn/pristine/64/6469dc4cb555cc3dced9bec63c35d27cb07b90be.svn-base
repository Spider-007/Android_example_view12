<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" >

    <LinearLayout
        android:id="@+id/ll_banzedayreport_wai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_banzuitem_banzu"
            android:layout_width="@dimen/chejiantablewidth"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="班组"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="@dimen/chejiantextsize" />

        <LinearLayout
            android:id="@+id/banzu_ll_layout_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/chejiantablewidth"
        android:layout_height="@dimen/tableline"
        android:layout_alignBottom="@id/ll_banzedayreport_wai"
        android:layout_gravity="center"
        android:background="@color/colortable"
        android:gravity="center" />

</RelativeLayout>