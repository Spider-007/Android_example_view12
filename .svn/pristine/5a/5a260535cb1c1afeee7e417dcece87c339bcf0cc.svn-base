<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_00000000"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingTop="12dp" >

    <LinearLayout
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_weight="0.00"
        android:background="@drawable/tip_background"
        android:orientation="vertical"
        android:paddingTop="8dp" >

        <TextView
            android:id="@+id/textview_popwindow_addressbook"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_corner_black_up"
            android:drawableLeft="@drawable/ic_user_n"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="通讯录"
            android:textColor="@drawable/tv_font_gray"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_divider_height"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/color_ff5d5d5d"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textview_popwindow_appmarket"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_corner_black_down"
            android:drawableLeft="@drawable/ic_user_n"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="应用中心"
            android:textColor="@drawable/tv_font_gray"
            android:textSize="15sp"
            android:visibility="visible" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_divider_height"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/color_ff5d5d5d" />

        <TextView
            android:id="@+id/textview_popwindow_share"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_corner_black_down"
            android:drawableLeft="@drawable/ic_user_n"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="工作分享"
            android:textColor="@drawable/tv_font_gray"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_divider_height"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/color_ff5d5d5d" />

        <TextView
            android:id="@+id/textview_popwindow_scan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_corner_black_down"
            android:drawableLeft="@drawable/ic_user_n"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="扫一扫"
            android:textColor="@drawable/tv_font_gray"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>