<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_clzz"
        android:layout_marginLeft="16dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/track_list"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_clzz"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_carnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:textColor="#F8F8F8"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总重（吨）"
                android:textColor="#8691AF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/all_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="302.45"
                android:textColor="#8691AF"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发运  "
                android:textColor="#8691AF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019/01/22"
                android:textColor="#8691AF"
                android:textSize="16dp" />

        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前汇报站："
        android:textColor="#8691AF"
        android:layout_marginTop="16dp"
        android:textSize="12dp"
        android:layout_toLeftOf="@+id/img_car_next"/>
    <ImageView
        android:id="@+id/img_car_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="19dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_clzz_next" />

</RelativeLayout>

</LinearLayout>