<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFF7F7F9"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/nine_header"
        android:layout_width="fill_parent"
        android:layout_height="130dip"
        android:layout_alignParentTop="true" >
        <TextView
            android:id="@+id/left_control_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF464C63"
            android:textSize="17.0dip"
            android:background="@drawable/mx_btn_back_guster"
            android:visibility="gone" />
        <TextView
            android:id="@+id/textTip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textColor="#FF464C63"
            android:textSize="16.0dip"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/userinfo_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:orientation="vertical" >

            <com.minxing.client.widget.RoundImageView
                android:id="@+id/my_avatar"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:src="@drawable/default_icon_avatar" />

            <TextView
                android:id="@+id/my_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FF464C63"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/operation_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30.0dip" >

        <TextView
            android:id="@+id/left_control"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="#FF464C63"
            android:textSize="17.0dip"
            android:visibility="gone" />

        <TextView
            android:id="@+id/right_control"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="#FF464C63"
            android:textSize="17.0dip"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nine_icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/operation_layout"
        android:layout_below="@id/nine_header"
        android:layout_weight="1.0"
        android:orientation="horizontal" />

</RelativeLayout>