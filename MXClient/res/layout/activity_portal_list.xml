<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    <RelativeLayout
        android:id="@+id/rv_serach"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_serach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/mx_icon_explore_normal" />

        <TextView
            android:id="@+id/tv_serach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/iv_serach"
            android:text="搜索"
            android:textColor="#FFBEBEBE"
            android:textSize="14sp" />

    </RelativeLayout>

    <SearchView
        android:id="@+id/sv_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:iconifiedByDefault="false"
        android:imeOptions="actionSearch"
        android:inputType="textCapWords"
        android:queryHint="请输入要搜索的提标"
        android:searchMode="queryRewriteFromText"
        android:showAsAction="collapseActionView"
        android:visibility="gone" >
    </SearchView>

    <GridView
        android:id="@+id/gridview_daibanlist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:horizontalSpacing="10dp"
        android:numColumns="4"
        android:layout_marginTop="38dp"
        android:stretchMode="columnWidth"
        android:background="@color/color_daibanheadercolor"
        android:verticalSpacing="20dp" />
    <ListView
        android:id="@+id/lv_daibanlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="8dp"
        android:background="@color/color_daibanheadercolor"
        android:divider="@color/gray"
        android:dividerHeight="1dp"/>

    <SlidingDrawer
        android:id="@+id/slidingDrawer_daiban_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:content="@+id/content"
        android:handle="@+id/layout_daiban_list" >

        <include
            android:id="@id/content"
            layout="@layout/slidingdrawer_content" />
        

        <LinearLayout
            android:id="@+id/layout_daiban_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="1dp"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:paddingTop="1dp" >

                <ImageView
                    android:id="@+id/imageviewHandle_daiban_list"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </SlidingDrawer>

</FrameLayout>