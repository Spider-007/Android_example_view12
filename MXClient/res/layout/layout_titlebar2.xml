<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    skin:enable="true"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/ht_hred_title" >

    <ImageView
        android:id="@+id/imgview_titlebar_back"
        style="@style/title_button"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        skin:enable="true"
        android:background="@drawable/mx_btn_back"
        android:scaleType="center" />

    <TextView
        android:id="@+id/textview_titlebar_more"
        android:layout_width="45dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text=""
        android:textColor="@color/ht_title_text_color"
        android:textSize="14sp"
        skin:enable="true"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgview_titlebar_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/textview_titlebar_more"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        skin:enable="true"
        android:background="@drawable/btn_selector_more"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textview_titlebar_title"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        skin:enable="true"
        android:textColor="@color/ht_title_text_color"
        android:textSize="@dimen/fontsize_heading19" />

</RelativeLayout>
