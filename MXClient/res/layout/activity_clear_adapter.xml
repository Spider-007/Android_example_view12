<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    tools:context="com.htmitech.proxy.activity.ClearCacheActivity">

    <LinearLayout
        android:id="@+id/rl_clear_docfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/activity_text_buttom_back"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/icon_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/hello_world"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            />

        <TextView
            android:id="@+id/tv_clear_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="清除正文缓存"
            android:textColor="#555555"
            android:layout_weight="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_clear_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清除正文缓存"
            skin:enable="true"
            android:textColor="@color/ht_hred_title"
            android:layout_marginRight="5dp"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_danwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=" MB"
            android:layout_marginRight="10dp"
            android:textSize="12sp" />
        <CheckBox
            android:id="@+id/cb_clear_docfile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/formcheckbox_selector"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:clickable="false"
            android:editable="false"
            android:scaleType="fitCenter"
            android:button="@null" />


    </LinearLayout>
</RelativeLayout>
