<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffffff"
    android:orientation="vertical" >

   
     
    <RelativeLayout
        android:id="@+id/layout_daiban_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
		skin:enable="true"
        android:background="@color/ht_hred_title" >

		<ImageView
		    android:id="@+id/btn_daiban_back"
		    style="@style/title_button"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"

		    android:background="@drawable/mx_btn_back"
		    android:scaleType="center" />
		  
        <com.htmitech.emportal.ui.widget.DaiBanTopTabIndicator
            android:id="@+id/daibantopTabIndicator_bbslist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_labels_margin"
            android:layout_marginBottom="@dimen/fab_labels_margin"
            android:visibility="gone"
            android:layout_centerInParent="true" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/ht_title_text_color"
            android:textSize="20dp"
            android:visibility="gone"
            android:text="清除缓存"/>
        <ImageView
            android:id="@+id/imageview_daiban_more"
            style="@style/title_button"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_selector_more" 
            android:scaleType="center" />
    </RelativeLayout>

    <!--<com.htmitech.emportal.ui.widget.MainViewPager-->
        <!--android:id="@+id/viewpager_daiban"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="fill_parent"-->
        <!--android:layout_below="@id/layout_daiban_titlebar"-->
        <!--android:visibility="visible" />-->
    <LinearLayout
        android:id="@+id/ll_general_from_child"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true"
        android:clipToPadding="true"
        android:layout_below="@id/layout_daiban_titlebar"
        android:orientation="vertical" >
    </LinearLayout>
    <com.htmitech.emportal.ui.widget.LoadingView
        android:id="@+id/loadingview_daiban_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:visibility="gone" />

    <include
        android:id="@+id/relativelayout_daiban_listview_error"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/fragment_empty_app"
        android:visibility="gone" />

</RelativeLayout>