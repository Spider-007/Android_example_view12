<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/system_title"
        layout="@layout/system_title" />

    <com.htmitech.MyView.EmptyLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/el_layout"
        android:layout_below="@id/system_title">
        <com.htmitech.emportal.ui.applicationcenter.DragGrid
            android:id="@+id/center_gridview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_grey_dark"
            android:gravity="center"
            android:clickable="true"
            android:longClickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:padding="1dp"
            android:scrollbars="vertical"
            android:stretchMode="columnWidth">
        </com.htmitech.emportal.ui.applicationcenter.DragGrid>
    </com.htmitech.MyView.EmptyLayout>


    <!--
    <com.htmitech.commonx.pulltorefresh.library.PullToRefreshListView
