<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/check_item_buttom13"
        android:layout_marginTop="@dimen/check_item_buttom13"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true">

            <com.htmitech.MyView.ClassifyView
                android:id="@+id/classify_view"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:background="@drawable/classify_drawable"
                android:orientation="vertical"
                android:visibility="gone" />

            <TextView
                android:id="@+id/class_angle_nulber"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/textview_style_number"
                android:gravity="center"
                android:text="13"
                android:textColor="@color/white"
                android:textSize="@dimen/check_item_buttom"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/iv_image_layout"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_app_centre_normal" />

            <TextView
                android:id="@+id/angle_nulber"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/textview_style_number"
                android:gravity="center"
                android:text="13"
                android:textColor="@color/white"
                android:textSize="@dimen/check_item_buttom"
                android:visibility="gone" />
        </RelativeLayout>
        <!--android:adjustViewBounds="true"-->
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:text="dd"
            android:textColor="#FF333333"
            android:textSize="@dimen/check_item_buttom13" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_no_installed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/img_no_installed"
        android:visibility="gone" />
</RelativeLayout>