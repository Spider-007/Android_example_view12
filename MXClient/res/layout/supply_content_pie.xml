<?xml version="1.0"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/context_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >

    <!-- 底部tab -->

    <RadioGroup
        android:id="@+id/tab_menu_pie"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottombar_blue"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_ton_pie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/tab_bg"
            android:button="@null"
            android:drawableTop="@drawable/tab_ton_selector"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="2dp"
            android:text="吨"
            android:textColor="@drawable/menu_tab_name_selector" />

        <RadioButton
            android:id="@+id/rb_root_pie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/tab_bg"
            android:button="@null"
            android:drawableTop="@drawable/tab_root_selector"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="2dp"
            android:text="根"
            android:textColor="@drawable/menu_tab_name_selector" />

        <RadioButton
            android:id="@+id/rb_km_pie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/tab_bg"
            android:button="@null"
            android:drawableTop="@drawable/tab_km_selector"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="2dp"
            android:text="公里"
            android:textColor="@drawable/menu_tab_name_selector" />
    </RadioGroup>





    <LinearLayout
        android:id="@+id/main_content_pie"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_menu_pie"
        android:background="@color/drawer_back"
        android:orientation="vertical" >

        <!-- 视图 -->

        <com.htmitech.emportal.ui.widget.LoadingView
            android:id="@+id/loadingview_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" />





        <RelativeLayout
            android:id="@+id/relative_layout_pie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent" >

            <TextView
                android:id="@+id/supply_time_textview_charttitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/drawer_back"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/frame_chart_pie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical" >
            </LinearLayout>

            <com.htmitech.emportal.ui.widget.flatingactionButton.FloatingActionsMenu
                android:id="@+id/chart_menu_pie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                fab:fab_addButtonColorNormal="@color/transparent"
                fab:fab_addButtonColorPressed="@color/transparent"
                fab:fab_addButtonPlusIconColor="@color/half_black"
                fab:fab_bitmap="@drawable/baobiao_action_on"
                fab:fab_labelStyle="@style/menu_labels_style" >
            </com.htmitech.emportal.ui.widget.flatingactionButton.FloatingActionsMenu>

            <ImageButton
                android:id="@+id/image_button_i"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/baobiao_action_off" />

            <!-- yan修改部分 -->

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
              android:layout_above="@id/image_button_i"
                android:layout_marginRight="13dp"
                android:gravity="right|bottom"
              
                
                
                android:textColor="#fff" />

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="90dp"
                android:layout_marginLeft="13dp"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentStart="true"
                 android:layout_toLeftOf="@id/image_button_i"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/lv_symbol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:focusable="false"
                    android:fadingEdge="none"
                    android:dividerHeight="0dp"
                    android:scrollbars="none"
                    android:divider="#00000000"
                    android:cacheColorHint="#00000000"
                    android:listSelector="#00000000"
                    android:focusableInTouchMode="false"
                    android:gravity="right"
                    android:textColor="#fff" />
            </LinearLayout>

            <!-- yan修改部分结束 -->

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>