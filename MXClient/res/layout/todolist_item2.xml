
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/gray2"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
  	android:gravity="left"
  	android:padding="5dp"
  	android:layout_marginLeft="10dp"
  	android:layout_marginRight="10dp"
  	android:layout_marginBottom="10dp"
  	android:background="@color/white"
    >
    
    <LinearLayout
        android:id="@+id/linearlayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageview_type"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="8dp"
            android:background="@color/red"
            android:layout_gravity="center_vertical"
             >
        </ImageView>
    </LinearLayout>
    
    <TextView
        android:layout_below="@id/linearlayout_1"
        android:layout_marginTop="6dp"
        android:id="@+id/textview_sendtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="14sp" />
    
    <LinearLayout
        android:id="@+id/linearlayout_2"
        android:layout_below="@id/textview_sendtime"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp" 
            android:text="文档类型:  "
            />
        <TextView
            android:id="@+id/textview_type"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp" 
            />
    </LinearLayout>
    
     <LinearLayout
         android:id="@+id/linearlayout_3"
        android:layout_below="@id/linearlayout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp" 
            android:text="提交人:  "
            />
        <TextView
            android:id="@+id/textview_sendfrom"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp" 
            />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearlayout_4"
        android:layout_below="@id/linearlayout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp" 
            android:text="提交时间:  "
            />
        <TextView
            android:id="@+id/textview_senddate"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp" 
            />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/ImageView_4"
        android:layout_below="@id/linearlayout_4"
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="2dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="12dp" />
    
   	<TextView
   	    android:layout_marginTop="8dp"
        android:layout_below="@id/ImageView_4"
   	    	android:id="@+id/textview_item"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp" 
            android:text="查看全文:  "
            />
   	
    <ImageView 
		android:layout_marginTop="6dp"
        android:layout_below="@id/ImageView_4"
        android:id="@+id/imageview_item"
        android:layout_width="12dp"
        android:layout_height="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_alignBottom="@id/textview_item"
        android:background="@drawable/arrows"
        />
    
</RelativeLayout>


</LinearLayout>






