<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_bg"
    android:orientation="vertical">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="钢轨供应链APP"
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal"
        android:textSize="22dp"
        android:layout_marginTop="18dp"
        android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="18dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/user_alt"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:orientation="vertical">
        <com.htmitech.MyView.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_input_left"
            android:layout_marginRight="@dimen/login_input_right">

            <com.htmitech.app.widget.CustomEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableRight="@drawable/ic_edit_text_delbtn"
                android:background="@color/transparent"
                android:drawablePadding="5dp"
                android:hint="@string/plx_input_email"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#D3D3D8"
                android:textSize="14dp" />
        </com.htmitech.MyView.FloatLabeledEditText>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ht_ccc" />
            </LinearLayout>
            </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/key"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:orientation="vertical">
        <com.htmitech.MyView.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_input_left"
            android:layout_marginRight="@dimen/login_input_right">

            <com.htmitech.app.widget.CustomEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:drawablePadding="5dip"
                android:drawableRight="@drawable/ic_edit_text_delbtn"
                android:hint="@string/plx_input_password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14dp" />
        </com.htmitech.MyView.FloatLabeledEditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ht_ccc" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_verification_code"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">


            <com.htmitech.MyView.FloatLabeledEditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_input_left"
                android:layout_marginRight="@dimen/login_input_right">

                <com.htmitech.app.widget.CustomEditText
                    android:id="@+id/verification_code"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/transparent"
                    android:drawablePadding="5dip"
                    android:drawableRight="@drawable/ic_edit_text_delbtn"
                    android:hint="@string/plx_input_verification_code"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#D3D3D8"
                    android:textSize="14dp" />
            </com.htmitech.MyView.FloatLabeledEditText>
            <com.htmitech.MyView.VerifyCode
                android:id="@+id/vc_pictrue"
                android:layout_width="60dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:padding="10dp"
                android:layout_height="wrap_content"
                app:codeBackground="#FCF8E2"
                app:codeLength="4"
                app:codeTextSize="22sp"
                app:isContainChar="true"
                app:linNum="5"
                app:pointNum="40" />

        </LinearLayout>

<!--    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ht_ccc" />-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/registe_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注  册"
            android:textSize="14dp"
            android:textColor="#0174EA"
            android:background="@drawable/edit_shape"
            android:layout_marginRight="40dp"/>
        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登  录"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/edit_shape2"/>

    </LinearLayout>
</LinearLayout>