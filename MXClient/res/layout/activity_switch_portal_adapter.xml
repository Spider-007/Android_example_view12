<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tv_portal_color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/pictures_no"/>
        <TextView
            android:id="@+id/tv_portal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="长江水文局"
            android:textSize="16sp"
            skin:enable="true"
            android:textColor="@color/portalswitchtitle"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/cb_portal_switch"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/popwindow_portal_switch"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:clickable="false"
            android:editable="false"
            skin:enable="true"
            android:scaleType="fitCenter"
            android:button="@null"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c8c7cc"
        android:layout_below="@id/ll_top"
        android:layout_marginLeft="80dp"
        />

</RelativeLayout>