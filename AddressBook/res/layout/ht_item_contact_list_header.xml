<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#90ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/re_discussion_groups"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:visibility="gone"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true" >

        <com.htmitech.app.widget.RoundImageView
            android:id="@+id/iv_avatar4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"

            android:src="@drawable/ht_icon_group_chat" />

        <TextView
            android:id="@+id/tv_servicebrand_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/iv_avatar4"
            android:text="讨论组"
            android:textColor="#353535"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:visibility="gone"
        android:background="#d9d9d9" />

    <RelativeLayout
        android:id="@+id/re_function"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true" >

        <com.htmitech.app.widget.RoundImageView
            android:id="@+id/iv_avatar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/icon_office_accounts" />

        <TextView
            android:id="@+id/tv_newfriends1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/iv_avatar1"
            android:text="功能号"
            android:textColor="#353535"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#d9d9d9" />

    
     <RelativeLayout
        android:id="@+id/re_special_focus"
        android:layout_width="match_parent"
        android:layout_height="52dp"
         android:visibility="gone"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true" >

        <com.htmitech.app.widget.RoundImageView
            android:id="@+id/iv_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ht_icon_vip_contact" />

        <TextView
            android:id="@+id/tv_newfriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/iv_avatar"
            android:text="特别关注"
            android:textColor="#353535"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:visibility="gone"
        android:background="#d9d9d9" />
    <RelativeLayout
        android:id="@+id/re_unit_contacts"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true" >

        <com.htmitech.app.widget.RoundImageView
            android:id="@+id/iv_avatar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/icon_book" />

        <TextView
            android:id="@+id/tv_chatroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/iv_avatar2"
            android:text="@string/mx_all_person_contact"
            android:textColor="#353535"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>