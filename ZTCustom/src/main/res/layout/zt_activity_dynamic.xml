<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000931" >

    <LinearLayout
        android:id="@+id/ll_fn5_title_theme"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/railway_back"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ibn_fn5_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="现存伤损动态排名"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/iv_shaixuan"
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:text="筛选"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center"
            />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/my_horizon"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/ll_fn5_title_theme"
        android:background="#2B3254"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/layout_dynamic_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <TextView
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/my_horizon"
        android:background="#0776E7" />

    <TextView
        android:id="@+id/tv_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="单位"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/lv_dynamic"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_title_name"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:listSelector="@color/transparent"
        android:scrollbars="none" />

    <ImageView
        android:id="@+id/function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/zt_htmitech_shezhi_1" />

    <LinearLayout
        android:id="@+id/ll_popupLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_time"
        android:background="#e0000000"
        android:clickable="true"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:background="#002450"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>