<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lib="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/allbackground"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_complete_fragment_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20dp" >

        <TextView
            android:id="@+id/tv_complete_niandu"
            android:layout_width="@dimen/complete_drawlayout_fragment_textwidth"
            android:layout_height="@dimen/complete_drawlayout_fragment_textheight"
            android:layout_gravity="center"
            android:background="@drawable/complete_drawlayout_text1_selector"
            android:gravity="center"
            android:text="年度"
            android:textColor="@color/white"
            android:textSize="@dimen/complete_drawlayout_fragment_textsize" >
        </TextView>

        <TextView
            android:id="@+id/tv_complete_jidu"
            android:layout_width="@dimen/complete_drawlayout_fragment_textwidth"
            android:layout_height="@dimen/complete_drawlayout_fragment_textheight"
            android:layout_gravity="center"
            android:background="@drawable/complete_drawlayout_text2_selector"
            android:gravity="center"
            android:text="季度"
            android:textColor="@color/white"
            android:textSize="@dimen/complete_drawlayout_fragment_textsize" >
        </TextView>

        <TextView
            android:id="@+id/tv_complete_yuedu"
            android:layout_width="@dimen/complete_drawlayout_fragment_textwidth"
            android:layout_height="@dimen/complete_drawlayout_fragment_textheight"
            android:layout_gravity="center"
            android:background="@drawable/complete_drawlayout_text3_selector"
            android:gravity="center"
            android:text="月度"
            android:textColor="@color/white"
            android:textSize="@dimen/complete_drawlayout_fragment_textsize" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_complete_drawlayout_fragment_annian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <net.simonvt.datepicker.DatePicker
            android:id="@+id/dp_complete_drawlayout_an"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#fff"
            lib:dp_calendarViewShown="false"
            lib:dp_spinnersShown="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_complete_drawlayout_fragment_anjidu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:orientation="vertical"
        android:visibility="gone" >

        <EditText
            android:id="@+id/et_complete_drawlayout_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_year"
            android:gravity="center"
            android:inputType="number"
            android:numeric="integer"
            android:singleLine="true"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_complete_drawlayout_first"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/dayreport_shaixuan_button"
                android:gravity="center"
                android:padding="5dp"
                android:text="第一季度"
                android:textColor="@color/white"
                android:textSize="@dimen/complete_drawlayout_fragment_textsize_jd" />

            <Button
                android:id="@+id/bt_complete_drawlayout_second"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/dayreport_shaixuan_button"
                android:gravity="center"
                android:padding="5dp"
                android:text="第二季度"
                android:textColor="@color/white"
                android:textSize="@dimen/complete_drawlayout_fragment_textsize_jd" />

            <Button
                android:id="@+id/bt_complete_drawlayout_thrid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/dayreport_shaixuan_button"
                android:gravity="center"
                android:padding="5dp"
                android:text="第三季度"
                android:textColor="@color/white"
                android:textSize="@dimen/complete_drawlayout_fragment_textsize_jd" />

            <Button
                android:id="@+id/bt_complete_drawlayout_fourth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/dayreport_shaixuan_button"
                android:gravity="center"
                android:padding="5dp"
                android:text="第四季度"
                android:textColor="@color/white"
                android:textSize="@dimen/complete_drawlayout_fragment_textsize_jd" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/ll_complete_drawlayout_fragment_up"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_completesum_drawlayout_fragmentout"
                android:layout_width="50dp"
                android:layout_height="13dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/zt_fragment_qiehuan" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>