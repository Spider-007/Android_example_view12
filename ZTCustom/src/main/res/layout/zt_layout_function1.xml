<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="25dp"
    android:paddingBottom="20dp"
    android:background="@drawable/zt_trans_bg">

    <LinearLayout
        android:id="@+id/ll_tl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="invisible"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_tl"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/zt_actionsheet_single_normal"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:text="查看图例详情"/>
        <ImageView
            android:id="@+id/iv_tl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_view"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_detail_data"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/zt_actionsheet_single_normal"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:text="明细数据"/>
        <ImageView
            android:id="@+id/iv_fun_detail_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_details"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_share"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/zt_actionsheet_single_normal"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:text="分享"/>
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_share"/>

    </LinearLayout>
</LinearLayout>
 