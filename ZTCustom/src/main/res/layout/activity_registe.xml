<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/allbackground"
    tools:context="com.htmitech.ztcustom.zt.chinarailway.CarVehicleActivity">

    <RelativeLayout
        android:id="@+id/rl_regist1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentTop="true"
        android:background="@color/title_color"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/ib_user_registe_back"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/tv_user_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="用户注册"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_textsize" />

        <Button
            android:id="@+id/bt_user_registe_right_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@color/transparent"
            android:text="提报"
            android:textColor="#F8F8F8"
            android:textSize="@dimen/quality_objection_top_textsize"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_regist1"
        android:layout_below="@+id/rl_regist1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_required"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="15sp"
            android:textColor="#F8F8F8"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textSize="16sp"
            android:textColor="#F8F8F8"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#D5D5D5"
            android:hint="请输入姓名"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@null"/>
    </LinearLayout>
    <View
        android:id="@+id/v1"
        android:layout_below="@+id/ll_regist1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#3E5CE0"/>

    <LinearLayout
        android:id="@+id/ll_regist2"
        android:layout_below="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#00103D">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_required"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="15sp"
            android:textColor="#F8F8F8"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textSize="16sp"
            android:textColor="#F8F8F8"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#D5D5D5"
            android:hint="请输入手机号"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:background="@null"/>
    </LinearLayout>
    <View
        android:id="@+id/v2"
        android:layout_below="@+id/ll_regist2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#3E5CE0"/>

    <LinearLayout
        android:id="@+id/ll_regist3"
        android:layout_below="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_required"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="所属单位"
            android:textSize="15sp"
            android:textColor="#F8F8F8"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textSize="16sp"
            android:textColor="#F8F8F8"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/et_corpname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#D5D5D5"
            android:hint="请输入所属单位"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:background="@null"/>
    </LinearLayout>
    <View
        android:id="@+id/v3"
        android:layout_below="@+id/ll_regist3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#3E5CE0"/>

    <LinearLayout
        android:id="@+id/ll_regist4"
        android:layout_below="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#00103D">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_required"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="部门"
            android:textSize="15sp"
            android:textColor="#F8F8F8"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textSize="16sp"
            android:textColor="#F8F8F8"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/et_deptname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#D5D5D5"
            android:hint="请输入部门"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:background="@null"/>
    </LinearLayout>
    <View
        android:id="@+id/v4"
        android:layout_below="@id/ll_regist4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#3E5CE0"/>

    <LinearLayout
        android:id="@+id/ll_regist5"
        android:layout_below="@+id/v4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_required"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="职务"
            android:textSize="15sp"
            android:textColor="#F8F8F8"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textSize="16sp"
            android:textColor="#F8F8F8"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#D5D5D5"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:background="@null"/>
    </LinearLayout>
    <View
        android:id="@+id/v5"
        android:layout_below="@+id/ll_regist5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#3E5CE0"/>


    <LinearLayout
        android:id="@+id/ll_regist6"
        android:layout_below="@+id/v5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#00103D">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_required"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="6dp"
            android:text="办公电话"
            android:textColor="#F8F8F8"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=": "
            android:textColor="#F8F8F8"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_officephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textColor="#D5D5D5"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:inputType="phone"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/v6"
        android:layout_below="@+id/ll_regist6"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#3E5CE0"/>


    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提 交"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:paddingTop="14dp"
        android:paddingBottom="15dp"
        android:background="#2962FF"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
