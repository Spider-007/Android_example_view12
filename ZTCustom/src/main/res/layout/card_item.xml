<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_shape"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/card_shape_top"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_card_head_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="大北京"
            android:textColor="#ffffff"
            android:textSize="@dimen/kaipian_top_textsize" />

        <TextView
            android:id="@+id/tv_card_head_meter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:text="单位：公里"
            android:textColor="#ffffff"
            android:textSize="@dimen/kaipian_top_textsize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_card_first_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/daochatanshangwc"
                android:textColor="@color/card_main_textcolor"
                android:textSize="@dimen/kaipian_main_textsize" />

            <TextView
                android:id="@+id/tv_card_first_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_card_first_top"
                android:gravity="center"
                android:text="888"
                android:textColor="@color/card_main_textcolor"
                android:textSize="@dimen/kaipian_num_textsize" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/tv_card_first_bottom"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_card_first_top"
                android:layout_centerVertical="true"
                android:background="@color/colorcardtopll" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_card_second_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="探伤计划数"
                android:textColor="@color/card_main_textcolor"
                android:textSize="@dimen/kaipian_main_textsize" />

            <TextView
                android:id="@+id/tv_card_second_bottom"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_card_second_top"
                android:gravity="center"
                android:text="888"
                android:textColor="@color/card_main_textcolor"
                android:textSize="@dimen/kaipian_num_textsize" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/tv_card_second_bottom"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_card_second_top"
                android:layout_centerVertical="true"
                android:background="@color/colorcardtopll" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_card_three_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="探伤计划数"
                android:textColor="@color/card_main_textcolor"
                android:textSize="@dimen/kaipian_main_textsize" />

            <TextView
                android:id="@+id/tv_card_three_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_card_three_top"
                android:gravity="center"
                android:text="888"
                android:textColor="@color/card_main_textcolor"
                android:textSize="@dimen/kaipian_num_textsize" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>