<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#001040"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_quality_objection_clqk_adapter_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX局"
            android:textColor="#F8F8F8"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_quality_objection_clqk_adapter_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2018/6/8"
            android:textColor="#BFCFFF"
            android:textSize="13sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_quality_objection_clqk_adapter_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="xxx公司"
        android:textColor="#C7C7CA"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_quality_objection_clqk_adapter_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="xxxxxxxx"
        android:textColor="#C7C7CA"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_quality_objection_clqk_adapter_image1"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/img_zlyy_list_thumbnail" />

        <ImageView
            android:id="@+id/iv_quality_objection_clqk_adapter_image2"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/img_zlyy_list_thumbnail" />

        <ImageView
            android:id="@+id/iv_quality_objection_clqk_adapter_image3"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/img_zlyy_list_thumbnail" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/allbackground"
        android:orientation="horizontal"></LinearLayout>

</LinearLayout>