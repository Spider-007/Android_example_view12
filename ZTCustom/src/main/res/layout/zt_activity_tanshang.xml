<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/drawer_back"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/drawer_back"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_fn5_title_theme"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/railway_back"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ibn_fn5_back"
                style="@style/title_button"
                android:src="@drawable/btn_back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="现存重伤监控"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/iv_shaixuan"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:text="筛选"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:gravity="center"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="@string/ts_qingkuang_number"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:background="#FF3E5CE0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <ScrollView
                android:id="@+id/sl_name_value"
                android:layout_width="0dp"
                android:scrollbars="none"
                android:layout_weight="1"
                android:layout_height="200dp">
                <LinearLayout
                    android:id="@+id/layout_name_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="25dp"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    />
            </ScrollView>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.5"
                >
                <com.htmitech.ztcustom.zt.view.CircleChartView
                    android:id="@+id/circle_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@color/transparent"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="right"
            android:orientation="horizontal"
            android:background="#FF2B3254">
            <TextView
                android:id="@+id/tv_orgname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                />
            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="50dp">

                <LinearLayout
                    android:id="@+id/ll_view_title"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:background="#EBEBEB"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_dw"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#2B3253"
                        android:text="单位"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/tv_xl"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#2B3253"
                        android:text="线路"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                </LinearLayout>
                <TextView
                    android:id="@+id/cursor"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:background="#FF3E5CE0"
                    android:contentDescription="tab" >
                </TextView>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FF2B3254">


            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:persistentDrawingCache="animation" />

            <ImageView
                android:id="@+id/function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/zt_htmitech_shezhi_1" />
        </RelativeLayout>
    </LinearLayout>
    <!--要弹出删选的pop-->
    <LinearLayout
        android:id="@+id/ll_popupLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_time"
        android:background="#e0000000"
        android:clickable="true"
        android:visibility="gone" >
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:background="#002450"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>