<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/allbackground"
    tools:context="com.htmitech.ztcustom.zt.chinarailway.GeneralInformationActivity">

    <RelativeLayout
        android:id="@+id/ll_tanshanggeneralinformation_title_theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentTop="true"
        android:background="@color/title_color"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/ib_tanshanggeneralinformation_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/btn_back"
            android:clickable="true"
            />

        <TextView
            android:id="@+id/tv_tanshanggeneralinformation_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/title_general_information"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_textsize" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_generalinfomation_top_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/generalinfomation_top_height"
        android:layout_below="@id/ll_tanshanggeneralinformation_title_theme"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_generalinfomation_xinfazhongshang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="新发折断重伤"
                android:textColor="#FFF8F8F8"
                android:textSize="@dimen/generalinfomation_top_textsize" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#FF3955D2"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_generalinfomation_zhongshangchuzhi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="重伤处置"
                android:textColor="#FFF8F8F8"
                android:textSize="@dimen/generalinfomation_top_textsize" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#FF3955D2"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_generalinfomation_tanshangrenwu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="探伤任务"
                android:textColor="#FFF8F8F8"
                android:textSize="@dimen/generalinfomation_top_textsize" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#FF3955D2"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_generalinfomation_tanshangche"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="探伤车"
                android:textColor="#FFF8F8F8"
                android:textSize="@dimen/generalinfomation_top_textsize" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#FF3955D2"
                android:visibility="gone" />

        </RelativeLayout>


    </LinearLayout>

    <com.htmitech.ztcustom.zt.view.MainViewPager
        android:id="@+id/viewpager_tanshanggeneralinformation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_generalinfomation_top_item">

    </com.htmitech.ztcustom.zt.view.MainViewPager>


</RelativeLayout>
