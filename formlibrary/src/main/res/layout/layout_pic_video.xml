<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:id="@+id/lr_pa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/audio_mp3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/form_audio_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_tape_play" />
            <TextView
                android:id="@+id/tv_mp3_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="00:05"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_xf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_zz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lanse"
            android:gravity="center"
            android:maxHeight="200dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:background="#80000000"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="6dp"
            android:visibility="gone" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignRight="@id/lr_pa"
        android:layout_alignTop="@id/lr_pa"
        android:src="@drawable/close" />
</RelativeLayout>