<?xml version="1.0" encoding="utf-8"?>
<com.htmitech_updown.updownloadmanagement.view.SwipeListLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--需要侧滑把此处放开 设置成visable-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#66ff0000"
            android:gravity="center"
            android:text="置顶" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#330000ff"
            android:gravity="center"
            android:text="删除" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_upload_file_finish_up_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_docx" />

        <RelativeLayout
            android:id="@+id/rl_upload_file_finish_up_adapter_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_upload_file_finish_up_right_cricle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/btn_finishlist_checkbox" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_upload_file_finish_up_adapter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@id/rl_upload_file_finish_up_adapter_right"
            android:layout_toRightOf="@id/iv_upload_file_finish_up_adapter"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="待办标题"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_upload_file_finish_up_adapter_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_upload_file_finish_up_adapter_title"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@id/rl_upload_file_finish_up_adapter_right"
            android:layout_toRightOf="@id/iv_upload_file_finish_up_adapter"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="工作流-表单签批 230.00KB/500.52KB"
            android:textColor="#666666"
            android:textSize="12sp" />

    </RelativeLayout>

</com.htmitech_updown.updownloadmanagement.view.SwipeListLayout>

