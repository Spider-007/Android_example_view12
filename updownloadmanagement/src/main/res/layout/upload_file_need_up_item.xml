<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_upload_file_need_up_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:src="@drawable/ic_docx" />

    <RelativeLayout
        android:id="@+id/rl_upload_file_need_up_adapter_start_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_upload_file_need_up_adapter_start_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_filemanage_start"
            android:visibility="gone" />

        <com.htmitech_updown.updownloadmanagement.view.CustomCircleProgressBar
            android:id="@+id/am__upload_file_need_up_adapter_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            app:outside_color="@color/progressbar_color"
            app:outside_radius="16dp"
            app:progress_text_size="10sp"
            app:progress_width="2dp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_upload_file_need_up_adapter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@id/rl_upload_file_need_up_adapter_start_pause"
        android:layout_toRightOf="@id/iv_upload_file_need_up_adapter"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="待办标题"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_upload_file_need_up_adapter_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_upload_file_need_up_adapter_title"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@id/rl_upload_file_need_up_adapter_start_pause"
        android:layout_toRightOf="@id/iv_upload_file_need_up_adapter"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="工作流-表单签批 230.00KB/500.52KB"
        android:textColor="#666666"
        android:textSize="12sp" />

</RelativeLayout>