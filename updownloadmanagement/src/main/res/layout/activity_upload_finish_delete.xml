<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.htmitech_updown.updownloadmanagement.UploadFinishDeleteActivity">

    <include
        android:id="@+id/system_title"
        layout="@layout/system_title" />

    <LinearLayout
        android:id="@+id/ll_upload_finish_delete_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC" />


        <Button
            android:id="@+id/bt_upload_finish_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="删除"
            android:textColor="#555555"
            android:textSize="17sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_upload_finish_delete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_upload_finish_delete_bottom"
        android:layout_below="@id/system_title"
        android:background="@color/white"></ListView>

</RelativeLayout>
